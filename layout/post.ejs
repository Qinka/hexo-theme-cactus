<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <header>
    <%- partial('_partial/post/title', { post: page, index: false, class_name: 'posttitle' }) %>
    <div class="meta">
      <span class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
        <span itemprop="name"><% if (page.author) { %><%- page.author %><% } else { %><%- config.author %><% } %></span>
      </span>
      <%- partial('_partial/post/date', { post: page, class_name: 'postdate' }) %>
      <%- partial('_partial/post/category') %>
      <%- partial('_partial/post/tag') %>
    </div>
  </header>
  <%- partial('_partial/post/gallery') %>
  <% page.column = page.content.split("<!--second-column-->")  %>
  <% if (page.column.length > 1) { %>
    <div class="content content-bil" itemprop="articleBody">
      <div class="article-bil-column bil-left-column" id="the-l-column">
        <div id="the-l-btn"><i class="fa fa-backward" onclick="column_hidden(-1)"></i></div>
          <%- page.column[0] %>
      </div>
      <div class="article-bil-column bil-right-column" id="the-r-column">
        <div id="the-r-btn"><i class="fa fa-forward"  onclick="column_hidden( 1)"></i></div>
          <%- page.column[1] %>
      </div>
      <%- css('css/bilingual') %>
    </div>
  <% } else { %>
    <div class="content" itemprop="articleBody">
      <%- page.column[0] %>
    </div>
  <% } %>
</article>
<%- partial('_partial/comments') %>
